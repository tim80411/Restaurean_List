<div class="container mt-5">
  <div class="row">
    <div class="col-6 m-auto">
      <form class="card card-body" action="/users/register" method="post">
        <div class="form-group">
          <label for="name">Name*</label>
          <input type="text" name="name" id="name" class="form-control" placeholder="Enter name" value="{{ name }}">
        </div>
        <div class="form-group">
          <label for="email">Email*</label>
          <input type="email" name="email" id="email" class="form-control" placeholder="Enter email"
            value="{{ email }}">
        </div>
        <div class="form-group">
          <label for="password">Password*</label>
          <input type="password" name="password" id="password" class="form-control" placeholder="Enter password"
            value="{{ password }}">
        </div>
        <div class="form-group">
          <label for="confirmPassword">Confirm Password*</label>
          <input type="password" name="confirmPassword" id="confirmPassword" class="form-control"
            placeholder="Enter confirmPassword" value="{{ confirmPassword }}">
        </div>
        <button type="submit" class="btn btn-primary btn-block">Resgister</button>
        <a href="/auth/facebook" class="btn btn-info btn-block">Facebook Login</a>
        <p class="lead mt-4">Have a Account?<a href="/users/login">Login</a></p>
      </form>
    </div>
  </div>
</div>