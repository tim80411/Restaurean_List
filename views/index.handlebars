<div class="container">
  {{!-- serach bar --}}
  <div class="row" id="search-bar">
    <div class="col-12 mt-5">
      <form action="/search" method='get'>
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search..." name="keyword" value={{ keyword }}>
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
    </div>
  </div>

  {{!-- restaurant card below --}}
  <div class="row" id="restaurant-cards">
    {{#each restaurants}}
    <div class="col-3 mt-3">
      <a href="/restaurants/{{ this.id }}/detail" class="text-dark">
        <div class="card mb-2">
          <img class="card-img-top" style="height: 130px" src={{ this.image }}>
          <div class="card-body">
            <h5 class="card-title">{{ this.name }}</h5>
            <div class="row">
              <div class="col-12">
                <span><strong>分類: </strong>{{ this.category }}</span>
              </div>
              <div class="col-12">
                <span><strong>評分: </strong>{{ this.rating }}</span>
              </div>
            </div>
          </div>
          <div class="card-footer text-right px-1">
            <a href="" class="btn btn-primary">Edit</a>
            <a href="/restaurants/{{ this._id }}/detail" class="btn btn-primary">Detail</a>
            <form action="" style="display: inline;">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </a>
    </div>

    {{/each}}
  </div>

</div>